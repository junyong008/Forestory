<?xml version="1.0" encoding="utf-8"?>
<ripple xmlns:android="http://schemas.android.com/apk/res/android" android:color="#000000">
<item android:id="@android:id/background">
    <selector xmlns:android="http://schemas.android.com/apk/res/android" android:id="@android:id/background">

        <item android:state_enabled="true">
            <shape
                android:padding="10dp"
                android:shape="rectangle">

                <solid android:color="#E05151" />
                <corners
                    android:topLeftRadius="50dp"
                    android:topRightRadius="50dp"
                    android:bottomLeftRadius="50dp"
                    android:bottomRightRadius="50dp"/>
            </shape>
        </item>

        <item android:state_enabled="false">
            <shape
                android:padding="10dp"
                android:shape="rectangle">

                <solid android:color="@color/gray" />
                <corners
                    android:topLeftRadius="50dp"
                    android:topRightRadius="50dp"
                    android:bottomLeftRadius="50dp"
                    android:bottomRightRadius="50dp"/>
            </shape>
        </item>
    </selector>
</item>
</ripple>